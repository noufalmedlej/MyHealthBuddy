<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp">



    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="116dp"
        android:layout_margin="5dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/all_HCP_profile_name"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginStart="170dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="-17dp"
            android:layout_marginRight="-17dp"
            android:text="HCP Name"
            android:textSize="16dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/all_HCP_profile_specialty"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/all_HCP_profile_name"
            android:layout_alignLeft="@+id/all_HCP_profile_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="right"
            android:layout_marginStart="-1dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="62dp"
            android:layout_marginRight="62dp"
            android:layout_marginBottom="65dp"
            android:text="Specialty"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/all_HCP_profile_Id"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginStart="171dp"
            android:layout_marginLeft="171dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:text=" ID  "
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/all_HCP_profile_gender"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/all_HCP_profile_Id"
            android:layout_alignLeft="@+id/all_HCP_profile_Id"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="74dp"
            android:layout_marginEnd="75dp"
            android:layout_marginRight="75dp"
            android:text=" Gender "
            android:textSize="16dp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/all_HCP_profileImg"
            android:layout_width="69dp"
            android:layout_height="78dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/doctor" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="56dp"
            android:layout_height="21dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="84dp"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="90dp"
            android:text="Name: "
            android:textColor="#131010"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="73dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="85dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="212dp"
            android:layout_marginRight="212dp"
            android:layout_marginBottom="67dp"
            android:lineSpacingExtra="18sp"
            android:text="Specialty:"
            android:textColor="#0C0A0A"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="84dp"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="51dp"
            android:layout_marginEnd="238dp"
            android:layout_marginRight="238dp"
            android:layout_marginBottom="43dp"
            android:text="ID:"
            android:textColor="#050101"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="68dp"
            android:layout_height="21dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="83dp"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="74dp"
            android:layout_marginEnd="219dp"
            android:layout_marginRight="219dp"
            android:layout_marginBottom="21dp"
            android:text="Gender"
            android:textColor="#0C0505"
            android:textSize="18sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>