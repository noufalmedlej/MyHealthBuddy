<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewRequestDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="88dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/page_request_requestdate"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="right"
                android:gravity="center"
                android:text="Date"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/page_request_pic" />

            <Button
                android:id="@+id/page_request_cancelanddelete"
                android:layout_width="286dp"
                android:layout_height="53dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/login_btn"
                android:text="Delete Request"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/page_request_note" />

            <include
                android:id="@+id/viewRequestToolbar"
                layout="@layout/toolbar"
                android:layout_width="413dp"
                android:layout_height="82dp" />

            <TextView
                android:id="@+id/page_request_name1"
                android:layout_width="363dp"
                android:layout_height="49dp"
                android:background="@drawable/login_style"
                android:ems="10"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:text="Name"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/textView14"
                app:layout_constraintTop_toBottomOf="@+id/textView14" />

            <TextView
                android:id="@+id/page_request_ID"
                android:layout_width="363dp"
                android:layout_height="49dp"
                android:background="@drawable/login_style"
                android:ems="10"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:text="ID"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/textView15"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <TextView
                android:id="@+id/page_request_type"
                android:layout_width="363dp"
                android:layout_height="49dp"
                android:background="@drawable/login_style"
                android:ems="10"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:text="Type"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/textView16"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <TextView
                android:id="@+id/page_request_apDate"
                android:layout_width="363dp"
                android:layout_height="49dp"
                android:background="@drawable/login_style"
                android:ems="10"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:text="Appointment Date"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/textView16"
                app:layout_constraintTop_toBottomOf="@+id/textView18" />

            <TextView
                android:id="@+id/page_request_note"
                android:layout_width="365dp"
                android:layout_height="77dp"
                android:background="@drawable/login_style"
                android:ems="10"
                android:focusable="false"
                android:gravity="center"
                android:inputType="none"
                android:scrollbars="vertical"
                android:text="None"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/display_reqordec"
                app:layout_constraintTop_toBottomOf="@+id/display_reqordec" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="32dp"
                android:layout_toEndOf="@+id/display_request_image"
                android:layout_toRightOf="@+id/display_request_image"
                android:text="Doctor Name: "
                android:textColor="#131010"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/page_request_pic" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/display_request_image"
                android:layout_toRightOf="@+id/display_request_image"
                android:text="Doctor ID: "
                android:textColor="#131010"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/page_request_name1" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/display_request_image"
                android:layout_toRightOf="@+id/display_request_image"
                android:text="Request Type:"
                android:textColor="#131010"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/page_request_ID" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="185dp"
                android:layout_height="27dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/display_request_image"
                android:layout_toRightOf="@+id/display_request_image"
                android:text="Appointment Date:"
                android:textColor="#131010"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/page_request_type" />

            <TextView
                android:id="@+id/display_reqordec"
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/display_request_image"
                android:layout_toRightOf="@+id/display_request_image"
                android:text="Notes:"
                android:textColor="#131010"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/page_request_apDate" />

            <ImageView
                android:id="@+id/page_request_pic"
                android:layout_width="99dp"
                android:layout_height="84dp"
                android:layout_marginStart="152dp"
                android:layout_marginLeft="152dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.025"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewRequestToolbar"
                app:srcCompat="@drawable/blooddonation" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>