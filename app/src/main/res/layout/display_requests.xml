<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">


        <RelativeLayout
            android:layout_width="370dp"
            android:layout_height="116dp"
            android:layout_margin="5dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/display_request_daterequest"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/display_reqordec"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text="Date"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/display_reqordec"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/display_request_image"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="281dp"
                android:layout_marginLeft="281dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:text="تاريخ رفع الطلب:"
                android:textColor="#131010"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/display_request_id"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_toStartOf="@+id/textView2"
                android:layout_toLeftOf="@+id/textView2"
                android:gravity="right"
                android:text=" ID  "
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/display_request_type"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_marginTop="59dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:layout_toStartOf="@+id/textView11"
                android:layout_toLeftOf="@+id/textView11"
                android:gravity="right"
                android:text="Type"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/display_request_name"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_toStartOf="@+id/textView4"
                android:layout_toLeftOf="@+id/textView4"
                android:gravity="right"
                android:text="name"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/display_request_Date"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_marginTop="84dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_toStartOf="@+id/textView12"
                android:layout_toLeftOf="@+id/textView12"
                android:gravity="right"
                android:text="Date"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="85dp"
                android:layout_toStartOf="@+id/display_request_image"
                android:layout_toLeftOf="@+id/display_request_image"
                android:text="اسم الطبيب:"
                android:textColor="#131010"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="33dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="61dp"
                android:layout_toStartOf="@+id/display_request_image"
                android:layout_toLeftOf="@+id/display_request_image"
                android:text="رمز الطبيب:"
                android:textColor="#050101"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="58dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="36dp"
                android:layout_toStartOf="@+id/display_request_image"
                android:layout_toLeftOf="@+id/display_request_image"
                android:text="النوع:"
                android:textColor="#050101"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="84dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="10dp"
                android:layout_toStartOf="@+id/display_request_image"
                android:layout_toLeftOf="@+id/display_request_image"
                android:text="تاريخ الموعد:"
                android:textColor="#050101"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/display_request_image"
                android:layout_width="86dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                app:srcCompat="@drawable/blooddonation" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>